.container
  = simple_form_for @article do |f|
    - if @article.errors.any?
      #error_explanation
        %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
        %ul
          - @article.errors.full_messages.each do |message|
            %li= message

    .field
      = f.label :name
      = f.text_field :name
    .field
      = f.label :price
      = f.text_field :price
    .field
      = f.association :categories, input_html: { class: 'coco', multiple: true }
    %br
    .actions
      = f.submit 'Save', class: 'btn'
      = link_to 'Back', articles_path, class: 'btn'
    

:javascript
  $(document).ready( () => { $('select').select2({multiple: true}) })